<%- include('./include/header.ejs')%>
    <div class="container">
        <h1 class="text-center text-color-index head py-4">Add New Student Details</h1>
        <div class="row">
            <div class="col-5">
                <img src="images/pic-1.png" alt="studet-pic" />
            </div>
            <div class="col-7">
                <form method="post" class="p-5">
                    <div class="form-group my-4">
                        <label for="studentName" class="form-label">Student Name</label>
                        <input type="text" id="studentName" class="form-control" placeholder="Enter Your name" name="name" required />
                    </div>
                    <div class="form-group my-4">
                        <label for="studentCourse" class="form-label">Course</label>
                        <input type="text" id="studentCourse" class="form-control" placeholder="Enter Your Course" name="course" required />
                    </div>
                    <div class="form-group my-4">
                        <label for="studentPercent" class="form-label">Pervious Year Percentage</label>
                        <input type="text" id="studentPercent" class="form-control" placeholder="Enter Your Precentage" name="percent" required />
                    </div>
                    <div class="button-group mt-5 d-flex justify-content-evenly">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a href="/student/view" class="btn btn-primary d-flex flex-row align-items-center justify-content-center">View Student</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include('./include/footer.ejs')%>