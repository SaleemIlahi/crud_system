<%- include('./include/header.ejs')%>
  <div class="container">
    <h1 class="text-center text-color-view head py-4">View Student Details</h1>
    <div class="row mt-5">
      <div class="col">
        <table class="table table-striped text-center">
          <thead>
            <tr>
              <th>Sr.no</th>
              <th>Student Name</th>
              <th>Course</th>
              <th>Percentage</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% let i=1 %>
            <% data.forEach((item) => { %>
              <tr>
                <th><%= i++ %></th>
                <td><%= item.name%></td>
                <td><%= item.course%></td>
                <td><%= item.percent%> %</td>
                <td class="d-flex align-items-center justify-content-evenly">
                  <form action="/update/<%= item._id %>" method="get">
                    <button type="submit" class="border-0">
                      <i class="fas fa-edit text-primary"></i>
                    </button>
                  </form>
                  <form action="/delete/<%= item._id %>" method="post">
                    <button class="border-0">
                      <i class="fas fa-trash-alt text-danger"></i>
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
        <a href="/" class="btn btn-primary d-flex justify-content-center m-auto">Back</a>
      </div>
    </div>
  </div>
  <%- include('./include/footer.ejs')%>